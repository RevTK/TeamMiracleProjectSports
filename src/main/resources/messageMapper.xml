<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.tm.nmp.message.MessageMapper">

	<select id="getMember" resultType="com.tm.nmp.account.AccountDTO">
		select * from member order by member_id
	</select>

	<select id="getMsg" parameterType="com.tm.nmp.account.AccountDTO" resultType="com.tm.nmp.message.MessageVO">
		select * from message where message_to = #{member_id} order by message_when desc  
	</select>
	
	<delete id="deleteMsg" parameterType="com.tm.nmp.message.MessageVO">
		delete from message where message_id = #{message_id}
	</delete>
	
	<insert id="sendMsg" parameterType="com.tm.nmp.message.MessageVO">
		insert into message values(message_seq.nextval, #{message_from}, #{message_to}, #{message_txt}, sysdate)
	</insert>

</mapper>